{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "arn:aws:iam::ACCOUNT_B:root",
                    "arn:aws:iam::ACCOUNT_B:role/EMR_EC2_DefaultRole"
                ]
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:Listbucket",    
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3::ACCOUNT_A:accesspoint/ACCESS_POINT_NAME/object/*",
                "arn:aws:s3::ACCOUNT_A:accesspoint/ACCESS_POINT_NAME"
            ]
        }
    ]
}