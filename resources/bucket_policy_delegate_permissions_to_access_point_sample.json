{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "arn:aws:iam::Account_B:root",
                    "arn:aws:iam::Account_B:role/EMR_EC2_DefaultRole"
                ]
            },
            "Action": "*",
            "Resource": [
                "arn:aws:s3:::a-access-points-data",
                "arn:aws:s3:::a-access-points-data/*"
            ],
            "Condition": {
                "StringEquals": {
                    "s3:DataAccessPointAccount": "Account_A"
                }
            }
        }
    ]
}          